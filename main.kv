BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            Label:
                color: (1, 0, 0.5, 1)
                text: 'Add A Question'
            TextInput:
                color: (1, 0, 0.5, 1)
                text: 'Question:'
                id: question
            TextInput:
                color: (1, 0, 0.5, 1)
                text: 'Answer'
                id: answer
            TextInput:
                color: (1, 0, 0.5, 1)
                text: 'Lie 1'
                id: lie_1
            TextInput:
                color: (1, 0, 0.5, 1)
                text: 'Lie 2'
                id: lie_2
            Spinner:
                color: (1, 0, 0.5, 1)
                values: ("The Dark Arts", "Magical People", "Magical Objects", "Hogwarts", "Animals & Magical Creatures","Magical Spells & Potions")
                id: category
            Button:
                text: 'Add'
                background_normal: ''
                background_color: (1, 0, 1, 1)
                on_press: app.add_question(question.text, answer.text, lie_1.text, lie_2.text, category.text)

        BoxLayout:
            orientation: 'vertical'
            Button:
                color: (1, 0, 0.5, 1)
                text: 'Roll the Category Dice'
                background_normal: ''
                background_color: (1, 0, 1, 1)
                on_press: app.handle_category_press()
            Label:
                color: (1, 0, 0.5, 1)
                id: category_label
                text: "Category: "
            Label:
                color: (1, 0, 0.5, 1)
                text: app.question
            Button:
                text: app.answer_a
                on_press: app.handle_answer_press(app.answer_a)
                background_normal: ''
                background_color: (1, 0, 1, 1)
            Button:
                text: app.answer_b
                on_press: app.handle_answer_press(app.answer_b)
                background_normal: ''
                background_color: (1, 0, 1, 1)
            Button:
                text: app.answer_c
                on_press: app.handle_answer_press(app.answer_c)
                background_normal: ''
                background_color: (1, 0, 1, 1)
            Label:
                color: (1, 0, 0.5, 1)
                text: app.score
    Label:
        text: app.status
        size_hint_y: 0.33