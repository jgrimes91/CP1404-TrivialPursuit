BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            Label:
                color: (1, 0, 0.5, 1)
                text: 'Add A Question'
            Label:
                color: (1, 0, 0.5, 1)
                text: 'Question:'
            Label:
                color: (1, 0, 0.5, 1)
                text: 'Answer'
            Label:
                color: (1, 0, 0.5, 1)
                text: 'Lie 1'
            Label:
                color: (1, 0, 0.5, 1)
                text: 'Lie 2'
            Label:
                color: (1, 0, 0.5, 1)
                text: 'Category'
            Button:
                text: 'Add'
                background_normal: ''
                background_color: (1, 0, 1, 1)

        BoxLayout:
            orientation: 'vertical'
            Button:
                color: (1, 0, 0.5, 1)
                text: 'Roll the Category Dice'
                background_normal: ''
                background_color: (1, 0, 1, 1)
                on_press: app.handle_category_press()
            Label:
                color: (1, 0, 0.5, 1)
                id: category_label
                text: "Category: "
            Label:
                color: (1, 0, 0.5, 1)
                text: app.question
            Button:
                text: app.answer_a
                on_press: app.handle_answer_press(app.answer_1)
                background_normal: ''
                background_color: (1, 0, 1, 1)
            Button:
                text: app.answer_b
                on_press: app.handle_answer_press(app.answer_2)
                background_normal: ''
                background_color: (1, 0, 1, 1)
            Button:
                text: app.answer_c
                on_press: app.handle_answer_press(app.answer_3)
                background_normal: ''
                background_color: (1, 0, 1, 1)
            Label:
                color: (1, 0, 0.5, 1)
                text: 'Score >9000 score'
    Label:
        text: 'Status'
        size_hint_y: 0.33